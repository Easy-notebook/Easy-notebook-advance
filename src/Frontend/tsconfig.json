{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Editor/*": ["./src/components/Editor/*"],
      "@Notebook/*": ["./src/components/Notebook/*"],
      "@LeftSidebar/*": ["./src/components/Notebook/LeftSideBar/*"],
      "@Store/*": ["./src/store/*"],
      "@Services/*": ["./src/services/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Config/*": ["./src/config/*"],
      "@Types/*": ["./src/types/*"],
      "@WorkflowMode/*": ["./src/components/Senario/WorkflowMode/*"],
      "@BasicMode/*": ["./src/components/Senario/BasicMode/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}