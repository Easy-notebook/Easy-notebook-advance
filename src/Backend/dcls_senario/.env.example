# DCLS Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment (development, testing, production)
DCLS_ENVIRONMENT=development

# Debug mode
DCLS_DEBUG=true

# Secret key for encryption and security
DCLS_SECRET_KEY=your-secret-key-here

# LLM Configuration
DCLS_LLM_PROVIDER=openai
DCLS_LLM_API_KEY=your-openai-api-key-here
DCLS_LLM_BASE_URL=https://api.openai.com/v1
DCLS_LLM_MODEL=gpt-4
DCLS_LLM_TEMPERATURE=0.7
DCLS_LLM_MAX_TOKENS=
DCLS_LLM_TIMEOUT=30
DCLS_LLM_MAX_RETRIES=3
DCLS_LLM_RETRY_DELAY=2.0

# Storage Configuration
DCLS_STORAGE_TYPE=file
DCLS_STORAGE_PATH=./data
DCLS_STORAGE_AUTO_BACKUP=true
DCLS_STORAGE_BACKUP_INTERVAL=3600
DCLS_STORAGE_MAX_FILE_SIZE=104857600

# Logging Configuration
DCLS_LOG_LEVEL=INFO
DCLS_LOG_FILE=./logs/dcls.log
DCLS_LOG_MAX_SIZE=10485760
DCLS_LOG_BACKUP_COUNT=5

# Agent Defaults
DCLS_AGENT_MAX_RETRIES=3
DCLS_AGENT_TIMEOUT=300
DCLS_AGENT_TEMPERATURE=0.7
DCLS_AGENT_ENABLE_CACHING=true
DCLS_AGENT_CACHE_TTL=3600

# Security Settings
DCLS_SECURITY_ENCRYPT_STORAGE=false
DCLS_SECURITY_ENCRYPTION_KEY=
DCLS_SECURITY_RATE_LIMIT_REQUESTS=100
DCLS_SECURITY_RATE_LIMIT_WINDOW=3600
DCLS_SECURITY_MAX_UPLOAD_SIZE=52428800

# Application Settings
DCLS_DATA_DIRECTORY=./data
DCLS_TEMP_DIRECTORY=./temp
DCLS_MAX_CONCURRENT_EXPERIMENTS=5
DCLS_EXPERIMENT_TIMEOUT=3600

# Database (Optional)
DCLS_DATABASE_URL=
DCLS_DATABASE_MAX_CONNECTIONS=10
DCLS_DATABASE_TIMEOUT=30

# Feature Flags
DCLS_FEATURE_EXPERIMENTAL=true
DCLS_FEATURE_DETAILED_LOGGING=true
DCLS_FEATURE_PERFORMANCE_MONITORING=true
DCLS_FEATURE_AUTO_CLEANUP=false

# Custom Settings
DCLS_DEVELOPMENT_MODE=true
DCLS_MOCK_EXTERNAL_APIS=false
DCLS_SKIP_HEAVY_COMPUTATIONS=false